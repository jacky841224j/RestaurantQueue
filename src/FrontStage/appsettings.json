{
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Microsoft": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Redis": "127.0.0.1:6379",
    "MySQL": "data source=localhost;database=DevDb;user id=root;password=test123;pooling=true;charset=utf8;"
  },
  "Sqlite": {
    "DbName": "QueueSystem"
  },
  "JwtConfig": {
    "SecretKey": "rdqziegmbzhflvkjpvhuadenwoxgpabu",
    "Issuer": "Tian",
    "Audience": "Tian",
    "Expired": 30,
    "RememberLoginExpired": 30
  },
  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "fileName": "${basedir}/internal-nlog.txt"
      },
      "systemconsole": {
        "type": "ColoredConsole",
        "layout": "${longdate}|${level:uppercase=true}|${logger}|${message} ${exception}"
      },
      "logconsole": {
        "type": "ColoredConsole",
        "layout": "${longdate}|${level:uppercase=true}|${callsite}|${message} ${exception}"
      }
    },
    "rules": [
      {
        "logger": "System.*",
        "finalMinLevel": "Warn",
        "writeTo": "systemconsole"
      },
      {
        "logger": "Microsoft.Hosting.Lifetime*",
        "finalMinLevel": "Info",
        "writeTo": "systemconsole"
      },
      {
        "logger": "Microsoft.*",
        "finalMinLevel": "Warn",
        "writeTo": "systemconsole"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logconsole"
      }
    ]
  }
}
